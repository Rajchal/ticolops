# Application Configuration
APP_NAME=Ticolops
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql+asyncpg://ticolops:password@localhost/ticolops

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=1

# CORS Configuration
ALLOWED_HOSTS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-for-signature-verification
GITHUB_WEBHOOK_SECRET=your-github-specific-webhook-secret
GITLAB_WEBHOOK_SECRET=your-gitlab-specific-webhook-secret
BASE_URL=http://localhost:8000
WEBHOOK_TIMEOUT_SECONDS=30

# Logging Configuration
LOG_LEVEL=INFO

# Git Provider Configuration (Optional)
# These are used for enhanced Git provider integrations
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret
GITLAB_CLIENT_ID=your-gitlab-oauth-client-id
GITLAB_CLIENT_SECRET=your-gitlab-oauth-client-secret